{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  }
}
