{
  "name": "promise-or-cb",
  "version": "1.1.0",
  "description": "Support both callback and promise style functions.",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/isysd/promise-or-cb"
  },
  "author": "Ira Miller",
  "license": "MIT",
  "readmeFilename": "README.md",
  "scripts": {
    "test": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "build": "tsc --declaration index.ts",
    "pre-commit": "npm run test && npm run lint"
  },
  "devDependencies": {
    "coveralls": "^3.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.3",
    "pre-commit": "^1.2.2"
  },
  "keywords": [
    "promise",
    "callback",
    "async"
  ],
  "pre-commit": [
    "build",
    "test"
  ]
}
